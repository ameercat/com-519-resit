<!DOCTYPE html>
<html>
<head>
    <title>Update Patient</title>
</head>
<body>
    <h1>Update Patient</h1>
    <form action="/update/<%= Patient._id %>" method="post">
        <input type="hidden" name="_id" value="<%= Patient._id %>">
        <br>
        <label for="age">Age:</label>
        <input type="text" id="age" name="age" value="<%= Patient.age %>" required>
        <br>
        <label for="gender">Gender:</label>
        <input type="text" id="gender" name="gender" value="<%= Patient.gender %>" required>
        <br>
        <label for="height">Height:</label>
        <input type="text" id="height" name="height" value="<%= Patient.height %>" required>
        <br>
        <label for="weight">Weight:</label>
        <input type="text" id="weight" name="weight" value="<%= Patient.weight %>" required>
        <br>
        <label for="cholesterol">Cholesterol:</label>
        <input type="text" id="cholesterol" name="cholesterol" value="<%= Patient.cholesterol %>" required>
        <br>
        <input type="submit" value="Update Patient">
        </form>
        
        </body>
        </html>





